# === Mercado Livre App ===
ML_APP_ID=
ML_SECRET_KEY=
ML_REDIRECT_URI=https://SEU_DOMINIO/auth/ml/callback

# === Conta Azul ===
CA_ACCESS_TOKEN=
CA_REFRESH_TOKEN=

# === Supabase ===
SUPABASE_URL=https://SEU_PROJETO.supabase.co
# Chave de backend (service role) - obrigatoria para sync/admin writes
SUPABASE_SERVICE_ROLE_KEY=
# Legado (fallback): mantenha vazio se usar SERVICE_ROLE acima
SUPABASE_KEY=

# === Server ===
BASE_URL=https://SEU_DOMINIO

# === CORS / Dashboard ===
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
SYNC_INTERVAL_MINUTES=5

# === Operação (vendas x não-venda) ===
# classifier | legacy
DAILY_SYNC_NON_ORDER_MODE=legacy

# Piloto: deixe só sellers desejados (ex.: 141air)
SELLER_ALLOWLIST=141air

# Se false, esconde /expenses (fase simplificada)
EXPENSES_API_ENABLED=false

# Pipeline noturno sequencial (00:01 BRT por padrão)
NIGHTLY_PIPELINE_ENABLED=true
NIGHTLY_PIPELINE_HOUR_BRT=0
NIGHTLY_PIPELINE_MINUTE_BRT=1
# Seg=0, Ter=1, Qua=2, Qui=3, Sex=4, Sab=5, Dom=6
NIGHTLY_PIPELINE_LEGACY_WEEKDAYS=0,3

# === Legacy Daily (usado quando NIGHTLY_PIPELINE_ENABLED=false) ===
LEGACY_DAILY_ENABLED=false
LEGACY_DAILY_HOUR_BRT=6
LEGACY_DAILY_MINUTE_BRT=15
LEGACY_DAILY_DEFAULT_CENTRO_CUSTO=NETAIR
LEGACY_DAILY_REPORT_WAIT_SECONDS=300
LEGACY_DAILY_UPLOAD_TIMEOUT_SECONDS=120

# Upload mode: http | gdrive
LEGACY_DAILY_UPLOAD_MODE=gdrive

# HTTP upload (se LEGACY_DAILY_UPLOAD_MODE=http)
LEGACY_DAILY_UPLOAD_URL=
LEGACY_DAILY_UPLOAD_TOKEN=

# Google Drive upload (se LEGACY_DAILY_UPLOAD_MODE=gdrive)
LEGACY_DAILY_GOOGLE_DRIVE_ROOT_FOLDER_ID=
LEGACY_DAILY_GOOGLE_DRIVE_ID=
# Forneça UM dos dois:
LEGACY_DAILY_GOOGLE_SERVICE_ACCOUNT_JSON=
LEGACY_DAILY_GOOGLE_SERVICE_ACCOUNT_FILE=
